<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/currentSpeedFragment">

    <fragment
        android:id="@+id/currentSpeedFragment"
        android:name="com.skichrome.gpsapp.view.CurrentSpeedFragment"
        android:label="@string/navigation_current_speed_fragment_title"
        tools:layout="@layout/fragment_current_speed">
        <action
            android:id="@+id/action_currentSpeedFragment_to_averageSpeedFragment"
            app:destination="@id/averageSpeedFragment" />
    </fragment>

    <fragment
        android:id="@+id/averageSpeedFragment"
        android:name="com.skichrome.gpsapp.view.AverageSpeedFragment"
        android:label="@string/navigation_average_speed_fragment_title"
        tools:layout="@layout/fragment_average_speed" />
</navigation>